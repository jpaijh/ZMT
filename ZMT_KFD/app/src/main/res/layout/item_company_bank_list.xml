<?xml version="1.0" encoding="utf-8"?><!--<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"--><!--xmlns:app="http://schemas.android.com/apk/res-auto"--><!--android:layout_width="match_parent"--><!--android:layout_height="wrap_content"--><!--android:background="@color/color_theme_bj">-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_theme_bj"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:autofit="http://schemas.android.com/apk/res-auto"
        style="@style/MyCardView"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/ll_banks_content"
            style="@style/MyFirstItem"
            android:background="@drawable/shape_company_banks"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.thinkcool.circletextimageview.CircleTextImageView
                    android:id="@+id/img_banks_circle"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@mipmap/approval_banner_avatar"
                    app:citv_border_color="@color/white"
                    app:citv_border_width="2dp" />
                <!--  app:citv_border_width="2dp"圆的宽度  圆的颜色
                            app:citv_border_color="@color/white"-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <me.grantland.widget.AutofitTextView
                            android:id="@+id/tv_banks_name"
                            style="@style/AppcompatTextView_Weight1"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="123,234.00杭州银行杭州银行杭杭州银行"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textSize_17sp"
                            autofit:minTextSize="@dimen/textSize_12sp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_banks_statusStr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="生效"
                            android:textColor="@color/white_two_mark"
                            android:textSize="@dimen/textSize_18sp" />
                    </LinearLayout>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_banks_swiftCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/company_bank_list__one"
                        android:textColor="@color/white_two_mark"
                        android:textSize="@dimen/textSize_12sp" />
                </LinearLayout>

            </LinearLayout>

            <me.grantland.widget.AutofitTextView
                android:id="@+id/tv_banks_bankAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="**** **** **** **** 1380"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_23sp"
                autofit:minTextSize="@dimen/textSize_12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
