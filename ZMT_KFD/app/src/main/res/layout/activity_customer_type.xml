<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_bj"
    android:orientation="vertical">

    <include layout="@layout/toolbar_title_center_white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_checkbox1"
            style="@style/MyFirstItem"
            android:background="@drawable/selector_mine_item_background"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="国内工厂"
                android:textColor="@color/black_one_mark_87"
                android:textSize="@dimen/textSize_18sp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkbox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:visibility="invisible" />
        </RelativeLayout>

        <View style="@style/MyView_16" />

        <RelativeLayout
            android:id="@+id/rl_checkbox2"
            style="@style/MyFirstItem"
            android:background="@drawable/selector_mine_item_background"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="个人商户"
                android:textColor="@color/black_one_mark_87"
                android:textSize="@dimen/textSize_18sp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkbox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:visibility="invisible" />
        </RelativeLayout>

        <View style="@style/MyView_16" />

        <RelativeLayout
            android:id="@+id/rl_checkbox3"
            style="@style/MyFirstItem"
            android:background="@drawable/selector_mine_item_background"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="中间商"
                android:textColor="@color/black_one_mark_87"
                android:textSize="@dimen/textSize_18sp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkbox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:visibility="invisible" />

        </RelativeLayout>

        <View style="@style/MyView_16" />

        <RelativeLayout
            android:id="@+id/rl_checkbox4"
            style="@style/MyFirstItem"
            android:background="@drawable/selector_mine_item_background"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="国外买手"
                android:textColor="@color/black_one_mark_87"
                android:textSize="@dimen/textSize_18sp" />

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/checkbox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="false"
                android:visibility="invisible" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>