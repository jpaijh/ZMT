<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_bj"
    android:orientation="vertical">

    <include layout="@layout/toolbar_title_center_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/MyView" />

        <LinearLayout style="@style/MyFirstItem">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_server_one"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_server_about_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_two_mark_54"
                android:textIsSelectable="true"
                android:textSize="@dimen/textSize_16sp" />

        </LinearLayout>

        <View style="@style/MyView_16" />

        <LinearLayout style="@style/MyFirstItem">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_server_two"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_server_about_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_two_mark_54"
                android:textIsSelectable="true"
                android:textSize="@dimen/textSize_16sp" />

        </LinearLayout>

        <View style="@style/MyView_16" />

        <LinearLayout style="@style/MyFirstItem">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/setting_server_three"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_16sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_server_about_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_two_mark_54"
                android:textIsSelectable="true"
                android:textSize="@dimen/textSize_16sp" />

        </LinearLayout>

        <View style="@style/MyView" />

    </LinearLayout>

    <LinearLayout
        style="@style/MyFirstItem"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting_server_four"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_16sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_server_about_address"
            style="@style/AppcompatTextView_Weight1"
            android:paddingLeft="10dp"
            android:text="地地方发的方国人的方法个"
            android:gravity="right"
            android:textColor="@color/black_two_mark_54"
            android:textIsSelectable="true"
            android:textSize="@dimen/textSize_16sp" />

    </LinearLayout>


</LinearLayout>