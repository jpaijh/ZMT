<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/file_ll_content"
    style="@style/MyFirstItem"
    android:layout_height="@dimen/lay_70"
    android:background="@drawable/selector_mine_item_background"
    android:clickable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/file_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_approval_file_image3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/file_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/textSize_18sp"
            android:textColor="@color/black_one_mark_87"
            android:text="付款详情点"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/file_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/textSize_14sp"
            android:singleLine="true"
            android:textColor="@color/black_two_mark_54"
            android:text="付款详情点"/>
    </LinearLayout>

</LinearLayout>