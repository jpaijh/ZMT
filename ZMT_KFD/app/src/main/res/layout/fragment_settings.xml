<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme_bj"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@color/white">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_server_setting"
            style="@style/MyFirstItem"
            android:background="@drawable/selector_mine_item_background"
            android:drawableLeft="@mipmap/ic_setting_wifi_243"
            android:drawablePadding="20dp"
            android:drawableRight="@mipmap/ic_arrow_next"
            android:gravity="center_vertical"
            android:text="@string/setting_server"
            android:textColor="@color/black_one_mark_87"
            android:textSize="@dimen/textSize_16sp" />

        <View style="@style/MyView_16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_phrase_setting"
            style="@style/MyFirstItem"
            android:drawablePadding="20dp"
            android:background="@drawable/selector_mine_item_background"
            android:drawableLeft="@mipmap/ic_setting_export_243"
            android:drawableRight="@mipmap/ic_arrow_next"
            android:gravity="center_vertical"
            android:text="@string/setting_phrase"
            android:textColor="@color/black_one_mark_87"
            android:textSize="@dimen/textSize_16sp" />


        <View style="@style/MyView_16" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_permission_setting"
            style="@style/MyFirstItem"
            android:drawablePadding="20dp"
            android:background="@drawable/selector_mine_item_background"
            android:drawableLeft="@mipmap/ic_setting_export_243"
            android:drawableRight="@mipmap/ic_arrow_next"
            android:gravity="center_vertical"
            android:text="@string/setting_permission"
            android:textColor="@color/black_one_mark_87"
            android:textSize="@dimen/textSize_16sp" />

    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_about_setting"
        style="@style/MyFirstItem"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_mine_item_background"
        android:drawableLeft="@mipmap/ic_setting_info_243"
        android:drawableRight="@mipmap/ic_arrow_next"
        android:drawablePadding="20dp"
        android:gravity="center_vertical"
        android:text="@string/setting_about"
        android:textColor="@color/black_one_mark_87"
        android:textSize="@dimen/textSize_16sp" />


</LinearLayout>