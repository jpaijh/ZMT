<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyDetailsItem"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/selector_mine_item_background"
    android:clickable="true"
    android:orientation="vertical"
  >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/img_orDetail_list"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_orDetail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退税融资"
            android:textColor="@color/black_one_mark_87"
            android:textSize="@dimen/textSize_17sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_orDetail_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="款已划入客户资金账户"
            android:textColor="@color/black_two_mark_54"
            android:textSize="@dimen/textSize_12sp" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_arrow_next" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_orDetail_list"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@mipmap/ic_order_generaltrade"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>