<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        style="@style/MyFirstItem"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_PMDetail_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/black_one_mark_87"
            android:textSize="@dimen/textSize_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_PMDetail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Payment_one"
            android:textColor="#FF55AE7C"
            android:textSize="@dimen/textSize_14sp" />

    </LinearLayout>
    <View style="@style/MyView_16"/>

    <RelativeLayout
        style="@style/MyFirstItem">

        <View
            android:id="@+id/view_center"
            android:layout_width="1dp"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:background="@color/line_color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/view_center"
            android:layout_marginRight="20dp"
            android:orientation="vertical">
            <!--<LinearLayout-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
