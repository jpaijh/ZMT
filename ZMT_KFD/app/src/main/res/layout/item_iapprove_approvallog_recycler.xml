<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:timeline="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.alorma.timeline.RoundTimelineView
        android:id="@+id/timeline_approvalLog"
        android:layout_width="?android:listPreferredItemHeight"
        android:layout_height="match_parent"
        timeline:timeline_lineStyle="linear"
        timeline:timeline_lineColor="@color/line_color"
        timeline:timeline_indicatorSize="15dp"
        timeline:timeline_type="middle"
        timeline:timeline_indicatorColor="@color/white"
        timeline:timeline_internalPadding="0dp"
        />

   
    <android.support.v7.widget.CardView
       style="@style/MyCardView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_approvalLog"
                android:layout_width="4.5dp"
                android:layout_height="match_parent"
                android:background="@color/details_Approval"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_approvalLog_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="部门经理审批"
                        android:textColor="@color/black_one_mark_87"
                        android:textSize="@dimen/textSize_20sp"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/img_approvalLog_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:visibility="gone"
                        android:src="@mipmap/ic_approval_result_phone3"/>
                </RelativeLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_approvalLog_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/black_two_mark_54"
                    android:textSize="@dimen/textSize_16sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_approvalLog_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:paddingLeft="8dp"
                    android:textColor="@color/black_two_mark_54"
                    android:text="2016-08-07 33:33:33"
                    android:textSize="@dimen/textSize_14sp"/>

            </LinearLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>